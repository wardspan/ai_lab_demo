FROM python:3.11-slim

WORKDIR /app

COPY jailbreak_demo/requirements.txt /app/jailbreak_demo/requirements.txt
RUN pip install --no-cache-dir -r /app/jailbreak_demo/requirements.txt

COPY . /app

ENV PYTHONUNBUFFERED=1

CMD ["uvicorn", "jailbreak_demo.server:app", "--host", "0.0.0.0", "--port", "8000"]
